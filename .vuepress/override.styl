@media (min-width: 719px)
    .nav-item > a:hover, .nav-item > a.router-link-active
        border-bottom 3px solid $accentColor

@media (min-width: 720px) and (max-width: 1023px)
    .search-box input:focus
        width: 10.8rem // to cover the openHAB text (leaving the logo)

@media (min-width: 1024px) and (max-width: 1280px)
    .search-box input
        width: 5.7rem

@media (max-width: 360px)
    .search-box input:focus
        width: 9.4rem // to cover the openHAB text (leaving the logo)

@media (max-width: 419px)
    .search-box input:focus
        width: 4rem

.content:not(.custom)>h1:first-child
    font-family 'Open Sans', sans-serif
    font-weight 400

@media print
    .navbar
        display none
    .page-versions
        display none
    .page-nav
        display none
    .editLink
        display none

.content pre, .content pre[class*='language-']
    white-space pre !important
    word-break normal !important

.content:not(.custom)
    max-width 1280px !important

.page .content:not(.custom):not(.page-nav):not(.edit-link)
    min-height 85vh !important

.page .content.edit-link
    display none

.logo
    width 160px
    height 35px

div:not([class*='language-'])
    pre
        color black
        code
            color black

a[href*='community.openhab.org'] .outbound
        display none

.nav-item > a.external:hover
    border-bottom 2px solid #ff7214
