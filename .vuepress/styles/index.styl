    .addon-logo
        background-color #fff
    .display-mode-toggle
        button
            background inherit !important
        button[disabled]
            background #f60 !important
    .addon-search .filter
        background #232123 url(/assets/img/search.83621669.svg) .7rem 1rem no-repeat !important
        border 1px solid #444
        color rgb(221, 221, 221)

    .post-cover
        background-color rgba(127,51,0,.667) !important
